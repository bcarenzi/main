{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Location Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "ID único da localização"
    },
    "name": {
      "type": "string",
      "description": "Nome da localização",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "description": "Tipo da localização"
    },
    "dimension": {
      "type": "string",
      "description": "Dimensão da localização"
    },
    "residents": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "Lista de URLs dos residentes"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL da API da localização"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Data de criação do registro"
    }
  },
  "required": ["id", "name", "type"],
  "additionalProperties": false
}

